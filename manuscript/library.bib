  date = {2015-12-01},
  journaltitle = {American Journal of Physiology. Lung Cellular and Molecular Physiology},
  shortjournal = {Am J Physiol Lung Cell Mol Physiol},
  volume = {309},
  number = {11},
  eprint = {26408551},
